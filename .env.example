# Application
APP_NAME="SchoolDream+"
APP_ENV=development
APP_URL=http://localhost:3000
APP_DEBUG=true

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=schooldream_lms
DB_USERNAME=root
DB_PASSWORD=

# Session
SESSION_LIFETIME=120
SESSION_COOKIE_NAME=schooldream_session

# Security
JWT_SECRET=your-secret-key-change-this-in-production

# Mail
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@schooldream.com
MAIL_FROM_NAME="${APP_NAME}"

# Uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,mp4,avi,mov,jpg,jpeg,png,gif

# Pagination
ITEMS_PER_PAGE=12

# Certificate
CERTIFICATE_ENABLED=true
